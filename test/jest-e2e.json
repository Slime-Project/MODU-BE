{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "../",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "collectCoverageFrom": ["**/*.(t|j)s"]
}
